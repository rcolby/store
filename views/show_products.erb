<div class='row'>  
  <div class='span6 offset3'>
    <div class="page-header">
      <h1 class='title'>Products</h1>
      <h4>Woohoo! There's some dynamite deals!</h4>
    </div>
  </div>
</div>
<div class='row'>
  <div class='span6 offset3'>
    <div class='backdrop'>
      <table class='table table-striped'>
        <tr>
          <th>Item</th>
          <th>Cost</th>
          <th></th>
        </tr>
        <% @rs.each do |row| %>
          <tr>
            <td><a href="/products/<%=row['id'] %>"><%= row['name'] %></a></td>
            <td>$<%= row['price'] %></td>
            
            <td>
              <% if row['on_sale'] == 't' %>
                <img src="/images/saletag.png" alt="On Sale!" >
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
